<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

	<RelativeLayout
	    android:id="@+id/layout_title"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/title_height"
	    android:padding="@dimen/title_padding"
	    android:background="@color/light_green" >
	    <ImageView
	        android:src="@drawable/ic_launcher"
	        android:scaleType="center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true" />
	</RelativeLayout>
	
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_below="@+id/layout_title" >

		<LinearLayout
		    android:id="@+id/layoutBody"
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="@dimen/body_padding" >

		    <Button
		        android:id="@+id/registration_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="registration" />
		    <Button
		        android:id="@+id/messages_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="messages" />
		    <Button
		        android:id="@+id/histories_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="history" />
		    <Button
		        android:id="@+id/notices_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="notice" />
		    <Button
		        android:id="@+id/parents_main_button"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="parents main" />

		    <EditText
		        android:id="@+id/deviceIdField"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:inputType="none" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
